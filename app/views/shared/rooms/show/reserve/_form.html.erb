<%= render "shared/error", obj: @room %>


<%= form_with model: @reserve, method: :post, url: reservations_new_path, local: true do |f|%>
  <%= f.label :start_date, "開始日"%>
  <%= f.date_field :start_date, class: "form-control mb-4"%>
  
  <%= f.label :end_date, "終了日"%>
  <%= f.date_field :end_date, class: "form-control mb-4"%>
  
  <%= f.label :person_num, "人数"%>
  <%= f.number_field :person_num, class: "form-control mb-4"%>
  
  <%= f.hidden_field :room_name, value: @room.name%>
  <%= f.hidden_field :room_id, value: @room.id%>
  <%= f.hidden_field :post_user_id, value: @post_user.id%>
  <%= f.hidden_field :reserve_user_id, value: @reserve_user.id%>
  
  <%= f.submit "予約する", class: "btn btn-primary form-control" %>
<% end %>
