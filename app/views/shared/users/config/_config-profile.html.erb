<%= render "shared/update-content/update-content", type: "title",  title: "プロフィール" %>

<%= form_with model: @user, url: users_profile_path  do |f|%>
  <%= render "shared/update-content/update-content", type: "icon" %>
  
  <%= render "shared/update-content/update-content",
    type: "edit", title: "アイコン画像", column: "icon", field: "file_field", placeholder: "アイコン画像をアップロード", f: f %>
   
  <%= render "shared/update-content/update-content",
    type: "edit", title: "名前", column: "name", field: "text_field", placeholder: "名前を入力", f: f %>
    
  <%= render "shared/update-content/update-content",
    type: "edit", title: "自己紹介", column: "profile", field: "text_area", placeholder: "自己紹介を入力", f: f %>
   
  <%= render "shared/update-content/update-content", 
    type: "submit",  title: "更新", f: f%>

<% end %>
