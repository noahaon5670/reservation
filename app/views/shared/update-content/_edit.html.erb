<%= f.label column, title, :class => "col-md-3 required-a" %>

<% case field %>
  <% when "file_field" then%>
    <%= f.file_field column, :class => "mb-4 col-md-9", placeholder: placeholder %>
    
  <% when "text_field" then%>
    <%= f.text_field column, :class => "form-control mb-4 col-md-9", placeholder: placeholder %>
    
  <% when "text_area" then%>
    <%= f.text_area column, :class => "form-control mb-4 col-md-9", placeholder: placeholder %>
<% end %>
