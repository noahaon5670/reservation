body, p, ol, ul, td {
    font-family: verdana, arial, helvetica, sans-serif;
    font-size: 13px;
    line-height: 18px;
}

body {
    position: relative;
    min-height: 100vh;
    padding-bottom: 180px;
    box-sizing: border-box;
    color: #333333;
}

ul {
  list-style: none;
}

a {
  color: #000;
}

div.field, div.action {
  margin-bottom: 10px;
}

.btn {
    display: inline-block;
    font-weight: 400;
    color: #212529;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-color: transparent;
    border: 1px solid transparent;
    padding: .375rem .75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: .25rem;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    
    &-primary {
      background-color: #4a90e2 !important;
      color: white !important;
    }
    
    &-secondary {
      color: #fff;
      background-color: #6c757d;
      border-color: #6c757d;
    }
    
    &-outline-secondary {
      color: #6c757d;
      border-color: #6c757d;
    }
}

.container {
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

.device {
  padding-top: 36px;
  font-size: 16px;
  
  p {
    font-size: 16px;
  }
  
  a {
    color: #007bff !important;
  }
  
  &-flame {
    max-width: 600px;
    text-align: center;
    padding: 24px;
    margin: 0px auto;
    background-color: white;
    border-radius: 4px;
    box-shadow: rgba(21, 27, 38, 0.15) 0px 1px 3px 0px;
  }
  
  &-inner {
    width: 360px;
    margin: 0px auto;
  }
}

.required::before ,.required-a::after{
  content: "必須";
  color: #fff;
  background-color: #ff0000a8;
  font-size: 12px;
  border-radius: 5px;
  padding: 4px;
  margin: 0 5px;
}

.header {
    width: 100%;
    height: 70px;
    padding: 4px 30px;
    background-color: #000000;
    
    .nav-item {
      display: inline-block;
      color: #fff;
      font-size: 14px;
    }
    
    i {
      position: absolute;
      top: 10px;
      left: 8px;
      font-size: 18px;
    }
    
    &-left-nav {
      float: left;
      
      form {
        display: inline-block;
      }
      
      .form-control {
        width: 180px;
        display: inline-block;
        position: relative;
        border-radius: 2px;
        padding-left: 30px;
      }
    }
    
    &-right-nav {
      float: right;
    }
    
    &-nav-menu {
      background-color: #fff;
      border: 3px solid #F6F8F9;
      // display: none;
      position: absolute;
      top: 70px;
      right: 10px;
      padding: 15px;
      z-index: 1000;
      
      li {
        line-height: 30px;
        font-size: 16px;
        padding: 3px 5px;
      }
    }
    
    &-search {
      position: relative;
    }
}

.host-icon {
  width: 65px;
  height: 65px;
  object-fit: cover;
  border-radius: 50px;
}

.fa-map-marker-alt::before {
    content: "\f3c5";
}

.user {
  .user-nav {
    width: 100%;
    box-sizing: border-box;
    padding: 30px 15px;
    
    li {
      font-size: 18px;
      padding: 10px;
    }
    
    &-pc {
      height: 100vh;
      
      .active {
        border-right: 3px solid #4a90e2;
        
        a {
          color: #4a90e2;
        }
      }
    }
  }
  
  .user-view {
    background-color: #F6F8F9;
    border-left: 2px solid #e2e2e2;
  }
  
  .user-view-box {
    max-width: 880px;
    background-color: #fff;
    border: 1px solid #eaedef;
    margin: 30px auto;
  }
  
  .update-content {
    border-bottom: 1px solid #eaedef;
    padding: 20px;
    margin: 0 15px;
    font-size: 16px;
    
    label {
      font-weight: bold;
    }
  }
  
  .icon-box {
    text-align: center;
  }
}

.top-main {
  background-image: url("<%= asset_path('img_cover_top.jpeg')%>");
  background-size: cover;
  width: 100%;
  height: 650px;
  
  .form-flame {
    height: 650px;
    display: flex;
    align-items: center;
  }
  
  .form-area {
    background: #fff;
    padding: 24px;
    border-radius: 5px;

    &-title {
      font-size: 28px;
      line-height: 33px;
      letter-spacing: 1px;
    }
  }
}

.panel-area {
  margin: 3rem;
  
  .section-title {
    font-size: 24px;
    margin: 35px  0;
    font-weight: bold;
  }
  
  span {
    position: absolute;
    bottom: 50px;
    left: 0;
    right: 0;
    color: #fff;
    font-weight: bold;
    z-index: 1;
    margin: auto;
    text-align: center;
    font-size: 24px;
  }
  
  .panel-image {
    width: 100%;
    height: 360px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 25px;
  } 
}

.room {
  width: 100%;
  padding: 30px 60px;
  
  &-image {
    width: 100%;
    height: 180px;
    position: absolute;
    top: 20px;
    object-fit: cover;
    
    &-out {
      position: relative;
      width: 100%;
      background: #F6F8F9;
      height: 200px;
    }
  } 
  
  &-flame-inner {
    border: 1px solid #e2e2e2;
    margin-bottom: 10px;
  }
  
  &-profile {
    width: 100%;
    padding: 15px;
    
    p {
      word-break: break-all;
    }
    
    &-name {
      font-size: 18px;
      font-weight: bold;
      color: #909090;
    }
    
    &-city {
      font-size: 16px;
      font-weight: bold;
    }
    
    &-price {
      text-align: right;
      font-size: 16px;
      letter-spacing: 1px;
    }
  }
}

.room-new .room-view {
    background-color: #F6F8F9;
    border-left: 2px solid #e2e2e2;
}

.room-new .room-view-box {
    max-width: 880px;
    background-color: #fff;
    border: 1px solid #eaedef;
    margin: 50px auto;
}

.room-new .update-content {
    border-bottom: 1px solid #eaedef;
    padding: 20px;
    margin: 0 15px;
    font-size: 16px;
}

.room-new {
  width: 100%;
  
  .room-nav {
    width: 100%;
    box-sizing: border-box;
    padding: 30px 15px;
    
    li {
      font-size: 18px;
      padding: 10px;
    }
  }
  
  .room-nav-pc {
    height: 100vh;
    
    .active {
      border-right: 3px solid #4a90e2;
      
      a {
        color: #4a90e2;
      }
    }
  }
  
  .update-content {
    label {
      font-weight: bold;
    }
  }
}

.room-show, .reservations-new {
  padding: 30px 0;
  
  &-image {
    width: 100%;
    object-fit: cover;
  }
  
  &-detail {
    display: flex;
    align-items: center;
    
    &-icon {
      padding: 10px;
    }
    
    &-content {
      font-size: 16px;
      line-height: 30px;
      padding: 30px 10px;
      border-top: 1px solid #eaedef;
      border-bottom: 1px solid #eaedef;
      word-break: break-all;
    }
  }
  
  &-profile {
    padding: 15px;
    
    &-name {
      font-size: 18px;
      font-weight: bold;
      padding: 15px 0;
    }
    
    &-address {
      font-size: 14px;
    }
  }
  
  &-nav {
    padding: 20px;
    border: 1px solid #eaedef;
  }
  
  &-date-select {
    padding: 15px 0;
    
    label {
      letter-spacing: 2px;
      font-size: 14px;
    }      
  }    
}

.room-posts, .reservations {
  max-width: 100vw;
  padding: 30px 60px;
  
  table {
    min-width: 800px;
    
    thead {
      tr {
        border-top: 1px solid #eaedef;
        border-bottom: 1px solid #eaedef;
      }
      
      th {
        padding: 8px 15px;
        font-size: 14px;
        letter-spacing: 1px;
      }
    }
    
    tbody {
      a {
        color: #4a90e2;
        text-decoration: underline;
      }
      
      tr {
        border-bottom: 1px solid #eaedef;
        
        &:nth-child(even) {
          background-color: #f9fafb;
        }
      }
      
      td {
        padding: 10px;
      }
      
      .posts-name {
        font-size: 18px;
        font-weight: bold;
        color: #909090;
      }
      
      .posts-content {
        max-width: 400px;
      }
    }
  }
}

.room-posts-image, .reservations-image {
    width: 240px;
    height: 140px;
    object-fit: cover;
}

.price-icon {
  &::before {
    content: "￥";
    padding-right: 3px;
  }
}

.footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 180px;
    margin-top: 64px;
    padding-top: 90px;
    background-color: #111;
    box-sizing: border-box;
    color: #fff;
    text-align: center;
}
